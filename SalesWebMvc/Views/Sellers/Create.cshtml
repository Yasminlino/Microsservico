@model SalesWebMvc.Models.Seller;
@{
	ViewData["Title"] = "Create";	
}
<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />
<div class="row	">
	<div class="col-4">
		<form asp-action="Create">
			<div class="form">
				<label asp-for="Name" class="col-form-label">Name</label>
				<input asp-for="Name" class="form-control" />
			</div>
			<div class="form">
				<label asp-for="Email" class="col-form-label">Email</label>
				<input asp-for="Email" class="form-control" />
			</div>
			<div class="form">
				<label asp-for="BirthDate" class="col-form-label">BirthDate</label>
				<input asp-for="BirthDate" class="form-control" />
			</div>
			<div class="form">
				<label asp-for="BaseSalary" class="col-form-label">BaseSalary</label>
				<input asp-for="BaseSalary" class="form-control" />
			</div>
			<div class="table-group-divider">
				<input type="submit" value="Create" class="btn-danger" />
			</div>
		</form>
	</div>
</div>